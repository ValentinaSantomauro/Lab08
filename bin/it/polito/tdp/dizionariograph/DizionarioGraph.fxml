<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1" fx:controller="it.polito.tdp.dizionariograph.DizionarioGraphController">
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <Label text="Lab7_Dizionario" BorderPane.alignment="CENTER" />
         </top>
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label text="Inserire il numero di lettere: ">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtNumLettere">
                           <HBox.margin>
                              <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Label text="Inserire una parola da cercare: ">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </Label>
                        <TextField fx:id="txtParola">
                           <HBox.margin>
                              <Insets bottom="10.0" left="2.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Button fx:id="btnGeneraGrafo" mnemonicParsing="false" onAction="#generaGrafo" text="Genera Grafo ">
                           <HBox.margin>
                              <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnTrovaVicini" mnemonicParsing="false" onAction="#trovaVicini" text="Trova vicini ">
                           <HBox.margin>
                              <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnGradoMax" mnemonicParsing="false" onAction="#trovaGradoMax" text="Trova grado max ">
                           <HBox.margin>
                              <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <TextArea fx:id="txtResult">
                     <VBox.margin>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                     </VBox.margin>
                  </TextArea>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </center>
</BorderPane>
